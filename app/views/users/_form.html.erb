<%= form_for @user do |f| %>
<%= f.label :user_name %>
<%= f.text_field :user_name %><br>
<%= f.label :about %>
<%= f.text_field :about %><br>
<%= f.label :password %>
<%= f.password_field :password %><br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %><br>
<% if @user.new_record?%>
<%= f.submit %>
<% else %>
<%= f.submit "Update User" %>
<%= link_to "Delete User", user_path(@user), method: :delete %>
<% end %>
<% end %>
<%= link_to "Cancel", users_path %>
