<%= form_for @course do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :day_night, "Is this course at night?" %>
<%= f.check_box :day_night %>
<% if @course.new_record? %>
  <%= f.submit %>
<% else %>
  <%= f.submit "Update Course" %>
  delete
<% end %>
<% end %>
<%= link_to "Cancel", users_path %>
