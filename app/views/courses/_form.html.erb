<%= form_for @course do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :day_night, "Is this course at night?" %>
<%= f.check_box :day_night %>
<% if @course.new_record? %>
  <%= f.submit "Create Course"%>
<% else %>
  <%= f.submit "Update Course" %>
  <%= link_to "Delete Course", course_path(@course), method: :delete %>
<% end %>
<% end %>
<%= link_to "Cancel", users_path %>
